<Window x:Class="BS.Output.File.Edit"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
        xmlns:local="clr-namespace:BS.Output.File"
        x:ClassModifier="internal"
        mc:Ignorable="d" 
        Title="File"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Width="400"
        SizeToContent="Height">

  <StackPanel Grid.IsSharedSizeScope="True" Margin="4">
    <Grid Margin="4">
      <Grid.ColumnDefinitions>
        <ColumnDefinition Width="Auto" SharedSizeGroup="Label"/>
        <ColumnDefinition Width="*"/>
      </Grid.ColumnDefinitions>
      <Label Grid.Column="0">Name</Label>
      <TextBox x:Name="NameTextBox" Grid.Column="1" VerticalContentAlignment="Center" Validation.Error="ValidateData" >
        <Binding Path="OutputName" UpdateSourceTrigger="PropertyChanged" NotifyOnValidationError="True">
          <Binding.ValidationRules>
            <local:NotNullOrEmptyValidationRule />
          </Binding.ValidationRules>
        </Binding>
      </TextBox>
    </Grid>
    <Grid Margin="4">
      <Grid.ColumnDefinitions>
        <ColumnDefinition Width="Auto" SharedSizeGroup="Label"/>
        <ColumnDefinition Width="*"/>
      </Grid.ColumnDefinitions>
      <Label Grid.Column="0">Directory</Label>
      <TextBox Grid.Column="1" VerticalContentAlignment="Center" Margin="0,0,34,0" Text="{Binding Directory, UpdateSourceTrigger=PropertyChanged}" />
      <Button x:Name="SelectDirectory"  Grid.Column="1" Content="..." Width="25" HorizontalAlignment="Right" Click="SelectDirectory_Click" />
    </Grid>
    <Grid Margin="4">
      <Grid.ColumnDefinitions>
        <ColumnDefinition Width="Auto" SharedSizeGroup="Label"/>
        <ColumnDefinition Width="*"/>
      </Grid.ColumnDefinitions>
      <Label Grid.Column="0">File name</Label>
      <TextBox x:Name="FileNameTextBox" Grid.Column="1" VerticalContentAlignment="Center" Margin="0,0,94,0" ContextMenuService.IsEnabled="False" Text="{Binding FileName, UpdateSourceTrigger=PropertyChanged}" />
      <Button x:Name="FileNameReplacement"  Grid.Column="1" Content="%" Width="25" HorizontalAlignment="Right" Margin="0,0,68,0" Click="FileNameReplacement_Click">
        <Button.ContextMenu>
          <ContextMenu x:Name="FileNameReplacementList" />
        </Button.ContextMenu>
      </Button>
      <ComboBox x:Name="FileFormatList" Grid.Column="1" Width="60" HorizontalAlignment="Right" SelectedValuePath="Tag" SelectedValue="{Binding FileFormat, UpdateSourceTrigger=PropertyChanged}" />
    </Grid>
    <Grid Margin="4">
      <Grid.ColumnDefinitions>
        <ColumnDefinition Width="Auto" SharedSizeGroup="Label"/>
        <ColumnDefinition Width="*"/>
      </Grid.ColumnDefinitions>
      <CheckBox Grid.Column="1" Content="Save automatically without prompting the directory" IsChecked="{Binding SaveAutomatically, UpdateSourceTrigger=PropertyChanged}" />
    </Grid>
    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0" >
      <Button x:Name="OK" Width="80" Height="24" Content="OK" Margin="4" Click="OK_Click" IsDefault="True" />
      <Button Width="80" Height="24" Content="Cancel" Margin="4" IsCancel="True"/>
    </StackPanel>
  </StackPanel>

</Window>
